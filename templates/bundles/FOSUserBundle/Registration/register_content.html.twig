{% trans_default_domain 'FOSUserBundle' %}
{% import 'form/forms.html.twig' as forms %}
{% form_theme form 'form/fields.html.twig' %}
 
<h2>{{ 'layout.register'|trans }}</h2>

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'full form-container'}}) }}

    <div class="small-input">
        {{ forms.input(form.firstname,'form.firstname'|trans) }}
    </div>

    <div class="small-input">
        {{ forms.input(form.lastname,'form.lastname'|trans) }}
    </div>

    <div class="small-input">
        {{ forms.input(form.email,'form.email'|trans) }}
    </div>

    <div class="small-input">
        {{ forms.input(form.username,'form.username'|trans) }}
    </div>

    <div class="small-input">
        {{ forms.input(form.plainPassword.first,'form.password'|trans) }}
    </div>

    <div class="small-input">
        {{ forms.input(form.plainPassword.second,'form.password_confirmation'|trans) }}
    </div>

    <div class="form-buttons">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-submit"/>
    </div>
{{ form_end(form) }}
