{% trans_default_domain 'FOSUserBundle' %}

<h2>S'enregistrer</h2>

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'full form-container'}}) }}
    {{ form_row(form.email) }}
    {{ form_row(form.username) }}
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.plainPassword) }}
    <div class="form-buttons">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-submit"/>
    </div>
{{ form_end(form) }}
