{% trans_default_domain 'FOSUserBundle' %}
 
<h1>{{ 'layout.register'|trans }}</h1>

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register')}) }}
    {{ form_widget(form) }}

    <div class="row justify-content-between align-items-center">
        <div class="form-buttons col-md-12 col-lg-6 order-1">
            <input type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-submit"/>
        </div>
        <div class="w-100"></div>
        <div class="row help-links col-md-12 col-lg-6 order-12 justify-content-end">
            <a href="{{ path('fos_user_security_login') }}" class="help-link">{{ 'registration.yet_member'|trans }}</a>
        </div>
    </div>
{{ form_end(form) }}
