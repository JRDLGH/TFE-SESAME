{% extends 'base.html.twig' %}

{% block title %}Profile index{% endblock %}

{% block content %}
    <h1>Profile index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Owner</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profile in profiles %}
            <tr>
                <td>{{ profile.id }}</td>
                <td>{{ profile.content }}</td>
                <td>{{ profile.owner }}</td>
                <td>
                    <a href="{{ path('management_profile_show', {'id': profile.id}) }}">show</a>
                    <a href="{{ path('management_profile_edit', {'id': profile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('management_profile_new') }}">Create new</a>
{% endblock %}