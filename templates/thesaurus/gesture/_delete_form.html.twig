    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gesture.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash icon"></i>{{ 'admin.control.delete'|trans|capitalize }}</button>
</form>