{% extends 'base.html.twig' %}

{% block title %}Gesture{% endblock %}

{% block content %}
    <h1>Gesture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gesture.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gesture.name }}</td>
            </tr>
            <tr>
                <th>ProfileVideo</th>
                <td>{{ gesture.profileVideo }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ gesture.video }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ gesture.cover }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gesture.description }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ gesture.creationDate ? gesture.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ gesture.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PublicationDate</th>
                <td>{{ gesture.publicationDate ? gesture.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('thesaurus_gesture_index') }}">back to list</a>

    <a href="{{ path('thesaurus_gesture_edit', {'id': gesture.id}) }}">edit</a>

    {{ include('thesaurus/gesture/_delete_form.html.twig') }}
{% endblock %}