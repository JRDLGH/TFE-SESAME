{% extends 'base.html.twig' %}
{% trans_default_domain 'thesaurus' %}

{% block title %}{{ 'thesaurus.search.title'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/thesaurus.css') }}">
{% endblock %}

{% block content %}
    <section id="thesaurus">
            <div>
                <h1>{{ 'thesaurus.search.title'|trans }}</h1>
                <p class="content-text">
                    {{ 'thesaurus.search.info'|trans }}
                </p>
                <form action="#" class="form-container">
                    <div class="form-group">
                        <label for="search_gesture">{{ 'thesaurus.search.input.label'|trans }}</label>
                        <div class="search-input row input-group">
                            <span class="input-logo" id="sizing-addon1 col-1"><i class="fa fa-search fa"></i></span>
                            <input type="text" name="search_gesture" id="search" class="form-control col-11" placeholder="{{ 'thesaurus.search.input.placeholder'|trans }}">
                        </div>
                    </div>
                </form>
                <div class="gestures-container">
                    <div class="status">
                        <i></i>
                        <span class="status-message"></span>
                    </div>
                    <div class="gesture-details">

                    </div>
                    <div id="gesture">
                    </div>
                    <div class='pagination-controls js-pagination-controls' style="display:none;">
                        <div class="controls">
                            <button class='btn btn-primary disabled js-previous-page'><i class="fa fa-angle-left prev-icon"></i>PrÃ©cÃ©dent</button>
                            <div class="separator"></div>
                            <button class='btn btn-primary js-next-page'>Suivant<i class="fa fa-angle-right next-icon"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}



{% block javascripts %}
    {{ parent() }} {# In order to add after parent's content #}
    <script src="{{ asset('build/thesaurus.js') }}"></script>
{% endblock %}

